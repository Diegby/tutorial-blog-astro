---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";

const darkTheme = "bg-rich-black";
---

<BaseLayout class={darkTheme}>
  <Nav />
  <section class="banner--background flex">
    <div class="flex flex-1 items-center pl-8 xl:justify-center xl:pr-[45rem]">
      <div class="text-white text-center text-2xl">
        <p>
          Customized plans, powered by <strong class="text-picton-blue"
            >Artificial Intelligence</strong
          >
        </p>
        <p>
          Your path to peak <strong class="text-picton-blue">performance</strong
          >.
        </p>

        <div class="flex justify-center mt-5">
          <div
            class="py-4 rounded-full border-solid border-2 border-picton-blue w-fit mx-5"
          >
            <p class="mx-5">
              <strong class="text-picton-blue">Start</strong> your personalized plan
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .banner--background {
    width: 100%;
    height: 400px;
    background-image: url("src/assets/banner-landing.png");
    background-repeat: no-repeat;
    background-position: top center;
    background-size: cover;
  }

  /*  @media only screen and (min-device-width: 1200px) {
    .banner--background {
      background-size: cover;
    }
  } */
</style>
